@model IEnumerable<Job_Offers_Website.Models.JobsViewModel>

@foreach (var collection in Model)
{
    <h3>@collection.JobTitle</h3>
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                اسم الباحث
            </th>
            <th>
                نص الرسالة
            </th>
            <th>
                تاريخ الإرسال
            </th>
        </tr>
        @foreach (var item in collection.Items)
        {
            <tr>
                <td>
                    @item.user.UserName
                </td>
                <td>
                    @item.Message
                </td>
                <td>
                    @item.ApplyDate
                </td>
            </tr>
        }
    </table>
}