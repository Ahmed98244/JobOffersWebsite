@model Job_Offers_Website.Models.ApplyForJob

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>حذف</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>التقديم على الوظيفة</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            عنوان الوظيفة
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Job.Title)
        </dd>


        <dt>
            نص الرسالة
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Message)
        </dd>

        <dt>
            تاريخ الإرسال
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApplyDate)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("العودة الى القائمة الرئيسية", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
