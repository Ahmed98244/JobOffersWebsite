@model IEnumerable<Job_Offers_Website.Models.ApplyForJob>

@{
    ViewBag.Title = "GetJobByUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>جميع الوظائف التي قدمت عليها</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Job.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplyDate)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Job.Title)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplyDate)

            </td>
            <td>
                @Html.ActionLink("تعديل", "Edit", new { id=item.Id }) |
                @Html.ActionLink("تفاصيل", "DetailsOfJop", new { id=item.Id }) |
                @Html.ActionLink("حذف", "Delete", new { id=item.Id })
            </td>

        </tr>
    }
</table>